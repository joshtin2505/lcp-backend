{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/quotes": [
      "warn",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "@typescript-eslint/space-before-function-paren": "off"
  }
}
